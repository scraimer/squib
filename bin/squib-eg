#!/usr/bin/env ruby
require 'squib'

data = {'name' => ['Thief', 'Grifter', 'Mastermind'], 
        'level' => [1,2,3]}

deck(width: 825, height: 1125, cards: 3) do
  background [1.0,1.0,1.0]
  rect x: 0, y: 0, width: 825, height: 1125, x_radius: 50, y_radius: 50

  text str: data['name'], x: 10, y: 250
  text str: data['level'], x: 10, y: 15

  save format: :png
end

puts "Done!"