#!/usr/bin/env ruby
require 'squib'

data = {'name' => ['Thief', 'Grifter', 'Mastermind'], 
        'level' => [1,2,3]}

Squib::Deck.new(width: 825, height: 1125, cards: 3) do
  background color: [1.0,1.0,1.0]
  rect x: 0, y: 0, width: 825, height: 1125, x_radius: 50, y_radius: 50
  rect x: 15, y: 15, width: 795, height: 1095, x_radius: 50, y_radius: 50
  rect x: 30, y: 30, width: 150, height: 150, x_radius: 50, y_radius: 50

  text str: data['name'], x: 10, y: 250
  text str: data['level'], x: 35, y: 45

  save format: :png
end

puts "Done!"